$(document).mouseup(function(e) {
  var subject = $(".pointsbox .dropbtn");
  if(e.target.id != subject.attr("id")){
    $(".dropdown-content").hide();
  }

  $(".tags .given_user").click(function() {
    $(this).next().remove();
    $(this).remove();
  });
});


