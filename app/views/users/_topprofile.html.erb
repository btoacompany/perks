    <% end %>

    // validationエラー表示の初期化
    $(this).find(".dropbtn").removeClass("form_invalid");

    <% if @company.point_fixed_flag == 0 %>
    isPoint = input.match(/\+[^\s|  ]+/);
    <% end %>
    isTag = input.match(/\#[^\s|  ]+/);
    
    <% if $allow_nickname.include?(@user.company_id) %>
      if(dataReceive == null || !isPoint || dataNickname == null) {

                // エラー箇所のスタイルを変更
