<div id="rewards_wrapper">
<div id="contents">
  <div class="row">
    <div class="rewards_top">
      <%unless @bonus.present? %>
        <p class="font12" style="padding-top: 20px;">ボーナスはまだ設定されていません。人事の方にお願いしてみてください！</p>
      <% end %>
    </div>

    <div id="item_list">
      <% @bonus.each_with_index do | item, i | %>
	<div class="item" >
	  <img src="https://s3-ap-northeast-1.amazonaws.com/prizy/common/img_03.png"/><br>
	  <div class="details">
	    <p class="name" align="left"><b><%= item[:title] %></b></p>
	    <p align="left"><%= item[:description] %></p>
	  </div>
	  <div class="buy">
	    <p><%= number_with_delimiter(item[:points], :delimiter => ',') %> ポイント</p> 
	  </div>
	</div>
      <% end %>
    </div>
  </div> <!-- row -->
</div> <!-- contents -->
</div> <!-- wrapper -->
