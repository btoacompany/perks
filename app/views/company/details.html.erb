<div id="wrapper">
<div id="contents">
  <h3 class="c_align">Company Details</h3><br>
  <div class="toolbox center">
    <table class="tbl_tools center">
      <tr>
	<td>Company ID: </td>
	<td><%= @company[:id] %></td>
      </tr>
      <tr>
	<td>会社名: </td>
	<td><%= @company[:name] %></td>
      </tr>
      <tr>
	<td>会社URL: </td>
	<td><%= @company[:url] %></td>
      </tr>
      <tr>
	<td>代理: </td>
	<td><%= @company[:owner] %></td>
      </tr>
      <tr>
	<td>メールアドレス: </td>
	<td><%= @company[:email] %></td>
      </tr>
      <tr>
	<td>会社住所: </td>
	<td><%= @company[:address] %></td>
      </tr>
      <tr>
	<td>連絡先: </td>
	<td><%= @company[:phone] %></td>
      </tr>
    </table><br>
    <p align="center">
      <input type="button" value="Back" class="btn btn_back" />
      <input type="button" value="Edit" class="btn btn_edit" />
    </p>
  </div><br><br>
</div> <!-- contents -->
</div> <!-- wrapper -->

<script type="text/javascript">
$(".btn_edit").click(function() {
  window.location = '/company/edit';
});

$(".btn_back").click(function() {
  window.location = "/company";
});
</script>
