<div id="wrapper">
<div id="contents">
  <h3 class="c_align">Register Company</h3><br>
  <%= form_tag( "/company/edit/complete", method: "post", id: "login_form" ) do %>
  <div class="center">
    <table class="center">
      <tr>
	<td>会社名: </td>
	<td><%= @company[:name] %></td>
      </tr>
      <tr>
	<td>会社URL: </td>
	<td><%= @company[:url] %></td>
      </tr>
      <tr>
	<td>代理: </td>
	<td><%= @company[:owner] %></td>
      </tr>
      <tr>
	<td>メールアドレス: </td>
	<td><%= @company[:email] %></td>
      </tr>
      <tr>
	<td>会社住所: </td>
	<td><%= @company[:address] %></td>
      </tr>
      <tr>
	<td>連絡先: </td>
	<td><%= @company[:phone] %></td>
      </tr>
      <tr>
	<td class="btn r_align" colspan="2">
	  <br><input type="submit" value="Submit" class="btn" />
	</td>
      </tr>
    </table>
  </div><br><br>
  <% end %>
</div> <!-- contents -->
</div> <!-- wrapper -->
