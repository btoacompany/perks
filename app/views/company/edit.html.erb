<div id="admin_wrapper">
<div class="admin_subheader">
  <ul class="admin_list">
    <li class="admin_li_checked"><%= link_to "会社情報", "/company/details" %></li>
    <li class="admin_li"><%= link_to "カスタマイズ","/company/customize" %></li>
    <li><%= link_to "部署・チーム情報","/company/teams" %></li>
    <li><%= link_to "社員情報","/company/employees" %></li>
    <li><%= link_to "ギフト","/company/rewards" %></li>
    <li><%= link_to "ギフト申請一覧","/company/rewards/request" %></li>
<!--     <li><%= link_to "特別ボーナス","/company/bonus" %></li> -->
    <li><%= link_to "Slack連携", "/integration/slack"%></li>
    <div class="clearfix"></div>
  </ul>
</div>

<div id="admin_contents">
  <h3 class="c_align">会社情報編集</h3><br>
  <%= form_tag( "/company/edit/complete", method: "post", id: "login_form" ) do %>
  <div class="toolbox center">
    <table class="admin_table">
      <tr>
	       <th scope="row">会社名</th>
	       <td><input type="text" name="name" value="<%= @company[:name] %>" required /></td>
      </tr>
      <tr>
        <th scope="row">URL</th>
        <td><input type="text" name="url" value="<%= @company[:url] %>" /></td>
      </tr>
      <tr>
        <th scope="row">担当者名</th> 
        <td><input type="text" name="owner" value="<%= @company[:owner] %>" required /></td>
      </tr>
      <tr>
        <th scope="row">メールアドレス</th>
	     <td><input type="email" name="email" value="<%= @company[:email] %>" required /></td>
      </tr>
      <tr>
        <th scope="row">会社住所</th>
        <td><input type="text" name="address" value="<%= @company[:address] %>" required /></td>
      </tr>
      <tr>
        <th scope="row">電話番号</th>
        <td><input type="text" name="phone" value="<%= @company[:phone] %>" required /></td>
      </tr>
    </table><br>
    <p align="center">
      <input type="button" value="戻る" class="btn btn_back" />
      <input type="submit" value="送信" class="btn" />
    </p>
  </div><br><br>
  <% end %>
</div> <!-- contents -->
</div> <!-- wrapper -->

<script type="text/javascript">
$(".btn_back").click(function() {
  window.location = "/company/details";
});
$('.setting_color').css('color','gray');
</script>
