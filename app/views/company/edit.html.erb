<div id="wrapper">
<div id="contents">
  <h3 class="c_align">Register Company</h3><br>
  <%= form_tag( "/company/edit/complete", method: "post", id: "login_form" ) do %>
  <div class="toolbox center">
    <table class="center tbl_tools">
      <tr>
	<td>会社名: </td>
	<td><input type="text" name="name" value="<%= @company[:name] %>" required /></td>
      </tr>
      <tr>
	<td>会社URL: </td>
	<td><input type="text" name="url" value="<%= @company[:url] %>" /></td>
      </tr>
      <tr>
	<td>代理: </td>
	<td><input type="text" name="owner" value="<%= @company[:owner] %>" required /></td>
      </tr>
      <tr>
	<td>メールアドレス: </td>
	<td><input type="email" name="email" value="<%= @company[:email] %>" required /></td>
      </tr>
      <tr>
	<td>パスワード: </td>
	<td><input type="password" name="password" id="passwd1" value="" /></td>
      </tr>
      <tr>
	<td>パスワード確認: </td>
	<td>
	  <input type="password" name="password" id="passwd2" value="" /><br> 
	  <span class="notice"></span>
	</td>
      </tr>
      <tr>
	<td>会社住所: </td>
	<td><input type="text" name="address" value="<%= @company[:address] %>" required /></td>
      </tr>
      <tr>
	<td>連絡先: </td>
	<td><input type="text" name="phone" value="<%= @company[:phone] %>" /></td>
      </tr>
      <tr>
	<td>ハッシュタグ: </td>
	<td><textarea name="hashtags"><%= @company.hashtags %></textarea></td>
      </tr>
    </table><br>
    <p align="center">
      <input type="button" value="Back" class="btn btn_back" />
      <input type="submit" value="Submit" class="btn" />
    </p>
  </div><br><br>
  <% end %>
</div> <!-- contents -->
</div> <!-- wrapper -->

<script type="text/javascript">
var passwd1 = document.getElementById("passwd1");
var passwd2 = document.getElementById("passwd2");

function validatePassword(){
  if(passwd1.value != passwd2.value) {
    $(".notice").text(" Passwords don't match");
  } else {
    $(".notice").text("");
  }
}
passwd1.onchange = validatePassword;
passwd2.onkeyup = validatePassword;

$(".btn_back").click(function() {
  window.location = "/company/details";
});
</script>
