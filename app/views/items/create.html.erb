<div id="wrapper">
<div id="contents">
  <h3 class="c_align">Add New Perk</h3>
  <%= form_tag( "/tools/items/create_complete", method: "post", id: "new_form" ) do %>
  <div class="center">
    <table class="center">
      <tr>
	<td>Perk Title: </td>
	<td><input type="text" name="name" value=""/></td>
      </tr>
      <tr>
	<td>Category: </td>
	<td>
	  <select name="category_id">
	  <% @categories.each do | id, val | %>
	    <option value="<%= id %>"><%= val %></option>
	  <% end %>
	  </select>
	</td>
      </tr>
      <tr>
	<td>Supplier: </td>
	<td>
	  <select name="supplier_id">
	  <% @suppliers.each do | item | %>
	    <option value="<%= item[:id] %>"><%= item[:name] %></option>
	  <% end %>
	  </select>
	</td>
      </tr>
      <tr>
	<td>Image Source: </td>
	<td><input type="text" name="img_src" value=""/></td>
      </tr>
      <tr>
	<td>Perk URL: </td>
	<td><input type="text" name="url" value=""/></td>
      </tr>
      <tr>
	<td>Description: </td>
	<td><textarea name="description" rows="5" cols="30"></textarea></td>
      </tr>
      <tr>
	<td>Price: </td>
	<td><input type="text" name="price" value=""/></td>
      </tr>
      <tr>
	<td>Discount % : </td>
	<td><input type="text" name="discount" value=""/></td>
      </tr>
      <tr>
	<td>Discount Price: </td>
	<td><input type="text" name="sale_price" value=""/></td>
      </tr>
      <tr>
	<td class="btn r_align" colspan="2">
	  <br><input type="submit" value="Submit" class="btn_submit" />
	</td>
      </tr>
    </table>
  </div><br><br>
  <% end %>
</div> <!-- contents -->
</div> <!-- wrapper -->

<script type="text/javascript">
</script>
