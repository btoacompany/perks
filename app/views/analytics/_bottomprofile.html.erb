<% @posts.each do | post | %>
  <div id="postsbox" class="post_<%= post[:id] %>">
    <div class="images">
    <div class="non_image" style="text-align: left; padding: 5px 10px; ">
      <p>ありがとうを伝えています。</p>
    </div>
    </div>
    <div class="posts">
      <div class="r_float">
        <div class="time" data-id="<% post[:id] %>">
          <p class="time_<% post[:id] %>" align="right"><%= post[:create_time] %></p>
        </div>
      </div>
      From <span class="user giver"><b>@<% if $allow_nickname.include?(@user.company_id) && post[:nickname].present? %><%= post[:nickname] %><% else %><%= post[:full_user_name] %><% end %></b></span><br> 
      To <span class="user receiver"><b>@<%= post[:full_receiver_name] %></b></span>
      <br>
      <span class="description"><%= raw post[:description].gsub(/\+[^\s|  ]+/,"").gsub(/\#[^\s|  ]+/,"<b style='color:#0080ff'>\\0</b>") %></span><br>
    </div>
    <div class="comments">
      <div class="comment_entry_<%= post[:id] %>">
      </div>
    </div>
  </div><br>
<% end %>