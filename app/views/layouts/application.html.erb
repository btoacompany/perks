<% if controller.controller_name == "landing"%>
  <%= yield %>
  <div class="landing_footer landing_pc">
    <div class="landing_footer_wrapper">
      <div class="landing_footer_left">
        <%= image_tag ("https://s3-ap-northeast-1.amazonaws.com/btoa-img/common/logo_pc.png") %>
      </div>
      <div class="landing_footer_right">
        <ul>
          <li><%= link_to "Prizyとは", "/"%></li>
          <li><%= link_to "プランと料金", "/price"%></li>
          <li><%= link_to "運営会社", "http://www.btoa-company.co.jp/", :target => "_blank"%></li>
        </ul>
      </div>
      <div class="landing_clearfix"></div>
      <div class="footer_bottom">
        <ul>
          <li class="pc_footer_fb">
            <%= link_to "https://www.facebook.com/prizy.official/", :target => "_blank" do %>
              <%= image_tag ("https://s3-ap-northeast-1.amazonaws.com/btoa-img/landingpage/sp.icon_facebook.png") %>
            <% end %>
          </li>
          <li class="pc_footer_tw">
            <%= link_to "https://twitter.com/BtoACompany", :target => "_blank" do %>
              <%= image_tag ("https://s3-ap-northeast-1.amazonaws.com/btoa-img/landingpage/sp.icon_twitter.png") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="landing_footer landing_sp">
    <div class="landing_footer_top">
      <div class="landing_footer_top_left">
        <%= image_tag ("https://s3-ap-northeast-1.amazonaws.com/btoa-img/landingpage/sp.logo.png") %>
      </div>
      <div class="landing_footer_top_right">
        <ul>
          <li class="landing_footer_facebook">
            <%= link_to "https://www.facebook.com/prizy.official/", :target => "_blank" do %>
              <%= image_tag ("https://s3-ap-northeast-1.amazonaws.com/btoa-img/landingpage/sp.icon_facebook.png") %>
            <% end %>
          </li>
          <li class="landing_footer_twitter">
            <%= link_to "https://twitter.com/BtoACompany", :target => "_blank" do %>
            <%= image_tag ("https://s3-ap-northeast-1.amazonaws.com/btoa-img/landingpage/sp.icon_twitter.png") %>
