<% if controller.controller_name == "landing"%>
  <%= yield %>
  <%= render "shared/footer"%>
<% elsif controller.controller_name == "analytics" || (controller.class.parents.include?(Admin) && controller.controller_name == "posts" && controller.action_name == "index") %>
  <%= render "shared/header"%>
  <%= yield %>
  <%= render "shared/footer"%>
<% elsif controller.controller_name == "company" %>
  <% if controller.controller_name == "company" && controller.action_name == "create" %>
    <%= yield %>
  <% elsif controller.controller_name == "company" && controller.action_name == "create_complete" %>
    <%= yield %>
  <% else %>
    <%= render "shared/header"%>
    <%= yield %>
    <%= render "shared/footer"%>
  <% end %>
<% elsif controller.controller_name == "/admin/posts" %>
  <%= render "shared/header"%>
  <%= yield %>
  <%= render "shared/footer"%>
<% else %>
  <!-- definition of @judgement -->
  <% if controller.controller_name == "users" && controller.action_name == "login" %>
    <% @judgment = "true" %>
  <% elsif controller.controller_name == "users" && controller.action_name == "login_complete" %>
    <% @judgment = "true" %>
  <% elsif controller.controller_name == "users" && controller.action_name == "forgot_password" %>
    <% @judgment = "true" %>
  <% elsif controller.controller_name == "users" && controller.action_name == "forgot_password_submit" %>
    <% @judgment = "true" %>
  <% elsif controller.controller_name == "users" && controller.action_name == "update" %>
    <% @judgment = "true" %>
  <% elsif controller.controller_name == "users" && controller.action_name == "invite" %>
    <% @judgment = "true" %>
  <% else %>
    <% @judgment = "false" %>
  <% end %>
 <!-- check @judgement -->
  <% if @judgment == "true" %> 
    <%= yield %>
  <% else %>
    <%= render "shared/header"%>
    <%= yield %>
    <div class="footer_wrapper">
      <%= render "shared/footer"%>
    </div>
  <% end %>
<% end %>

</body>
